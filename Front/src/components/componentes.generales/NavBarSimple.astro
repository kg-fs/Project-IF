---
import logo from "../../assets/logo.png";
---
<header class="mx-auto w-full max-w-screen-2xl px-8 pt-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      <img src={logo.src} alt="Nova Forum" class="h-12 w-12" />
      <div class="flex flex-col leading-tight">
        <span class="font-semibold text-lg">Nova Forum</span>
        <span class="text-slate-600 text-sm">Crear cuenta</span>
      </div>
    </div>
    <a href="/landing" class="inline-flex items-center justify-center rounded-full bg-[#7B1429] text-white px-5 py-2 font-semibold hover:scale-105 transition">Regresar</a>
  </div>
</header>
