// Importación directa de los componentes React
import AdminSwitcher from "../components/admin-components/AdminSwitcher";

---

<Layout>
  <NavBar name="Usuario" role="Administrador" />

  
  <!-- Contenedor para el componente React -->
  <div id="admin-root" class="p-4">
    <AdminSwitcher client:load />
  </div>
  
  <!-- Script para asegurar la carga del componente -->
  <script>
    // Este script asegura que el componente se monte correctamente
    document.addEventListener('DOMContentLoaded', () => {
      console.log('Página de administración cargada');
    });
  </script>
</Layout>
