---
import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/login/LoginForm.jsx";
import logo from "../assets/logo.png";
---

<Layout>
  <main
    class="min-h-screen bg-white text-slate-900 flex items-center justify-center"
  >
    <section class="w-full max-w-4xl px-6 py-12">
      <div class="grid gap-10 md:grid-cols-2 items-center">
        <div class="text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight">
            Inicia sesión
          </h1>
          <p class="mt-3 text-slate-700 max-w-prose mx-auto md:mx-0">
            Accede a Nova Forum para publicar, debatir y descubrir conocimiento
            científico.
          </p>
          <div class="mt-8">
            <LoginForm client:load />
          </div>
        </div>
        <div class="hidden md:block">
          <div class="rounded-2xl bg-white p-6 sm:p-8">
            <div
              class="aspect-4/3 rounded-xl flex items-center justify-center gap-1"
            >
              <img
                transition:name="logo"
                src={logo.src}
                alt="Logo Nova Forum"
                class="w-[400px] h-[400px] object-contain drop-shadow-sm"
              />
              <div class="select-none">
                <h2
                  class="text-5xl font-extrabold tracking-tight leading-tight"
                >
                  <span class="text-[#7B1429]">Nova</span>
                  <span class="text-slate-900"> Forum</span>
                </h2>
                <p class="mt-3 text-slate-600 text-base">
                  Comunidad científica y debate académico
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
